# Variables de entorno para BACONFORT Backend

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/baconfort?retryWrites=true&w=majority

# JWT Secret (genera uno nuevo en producción)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambiar_en_produccion

# Puerto del servidor
PORT=5000

# Entorno
NODE_ENV=development

# Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Frontend URL (para CORS en producción)
FRONTEND_URL=https://tu-dominio-netlify.netlify.app

# CORS Origins permitidos (separados por comas)
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Gmail SMTP)
EMAIL_USER=tu_email@gmail.com
EMAIL_APP_PASSWORD=tu_password_de_aplicacion_gmail
ADMIN_EMAIL=admin@baconfort.com
